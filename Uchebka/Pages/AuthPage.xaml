<Page x:Class="Uchebka.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">Авторизация</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="LoginTbx"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Пароль</TextBlock>
                <PasswordBox x:Name="PasswordPbx"></PasswordBox>
            </StackPanel>
            <Button x:Name="AuthButt" Click="AuthButt_Click">Войти</Button>
            <Button x:Name="RegButt" Click="RegButt_Click">Зарегистрироваться</Button>
            <StackPanel Orientation="Horizontal">
                <CheckBox></CheckBox>
                <TextBlock>Запомнить меня</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
