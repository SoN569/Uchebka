<Page x:Class="Uchebka.Pages.BreakdownPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BreakdownPage">

    <Grid>
        <StackPanel>
            <ListView x:Name="BreakdownLV" Height="500">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Width="200" Header="Оборудование"></GridViewColumn>
                            <GridViewColumn Width="200" Header="Причина"></GridViewColumn>
                            <GridViewColumn Width="200" Header="Начало сбоя"></GridViewColumn>
                            <GridViewColumn Width="200" Header="Конец сбоя"></GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
