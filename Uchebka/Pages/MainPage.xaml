<Page x:Class="Uchebka.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" x:Name="RoleTb"></TextBlock>
            <Button Visibility="Collapsed" Click="EmployeeListButt_Click" x:Name="EmployeeListButt">Ведение учета работников предприятия</Button>
            <Button x:Name="MaterialListButt" Click="MaterialListButt_Click">Список материалов</Button>
            <Button x:Name="ComponentsListButt" Click="ComponentsListButt_Click">Список комплектующих</Button>
            <Button x:Name="OrdersListButt" Click="OrdersListButt_Click">Список заказов</Button>
            <Button x:Name="BreakdownListButt" Click="BreakdownListButt_Click" Visibility="Collapsed">Список сбоев оборудования</Button>
            <Button Visibility="Collapsed" Click="QualityButt_Click" x:Name="QualityButt">Оценка качества</Button>
        </StackPanel>
    </Grid>
</Page>
